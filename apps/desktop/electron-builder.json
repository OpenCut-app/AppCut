{
  "appId": "com.opencut.app",
  "productName": "OpenCut",
  "directories": {
    "output": "dist"
  },
  "files": [
    "main.js",
    "package.json",
    {
      "from": "../web/out",
      "to": "web",
      "filter": ["**/*"]
    }
  ],
  "asar": false,
  "mac": {
    "category": "public.app-category.video",
    "target": "dmg",
    "icon": "build-icons/icon.icns"
  },
  "win": {
    "target": "nsis",
    "icon": "build-icons/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
} 