{
  "name": "opencut-desktop",
  "version": "0.1.0",
  "description": "Privacy-focused desktop video editor",
  "author": "OpenCut Team",
  "main": "electron/main-simple.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:electron": "NEXT_PUBLIC_ELECTRON=true next build",
    "export:electron": "NEXT_PUBLIC_ELECTRON=true next build && node scripts/fix-electron-paths.js",
    "electron:dev": "node scripts/dev-electron.js",
    "electron:build": "npm run export:electron",
    "electron:pack": "npm run electron:build && electron-builder --dir",
    "electron:dist": "npm run electron:build && electron-builder --publish=never",
    "electron:dist:win": "npm run electron:build && electron-builder --win"
  },
  "devDependencies": {
    "electron": "37.2.3",
    "electron-builder": "26.0.12"
  },
  "build": {
    "appId": "com.opencut.desktop",
    "productName": "OpenCut Desktop",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "electron-app.html"
    ],
    "extraFiles": [
      {
        "from": "public/ffmpeg",
        "to": "ffmpeg",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [],
  "license": "ISC"
}